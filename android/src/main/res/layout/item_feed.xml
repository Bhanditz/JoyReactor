<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/card"
    android:foreground="?android:listChoiceBackgroundIndicator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <y2k.joyreactor.RoundBorderLayout
                android:id="@+id/userImagePanel"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <y2k.joyreactor.WebImageView
                    android:id="@+id/userImage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"/>
            </y2k.joyreactor.RoundBorderLayout>
            <TextView android:id="@+id/userName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="12dp"
                      android:layout_marginLeft="8dp"
                      android:layout_toRightOf="@id/userImagePanel"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="#616161"
                      android:textSize="14sp"/>
            <TextView android:id="@+id/commentCount"
                      android:gravity="bottom"
                      android:drawableLeft="@drawable/ic_reply"
                      android:drawablePadding="4dp"
                      android:layout_marginRight="4dp"
                      android:layout_marginTop="23dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignTop="@id/userImagePanel"
                      android:layout_alignLeft="@id/userName"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="#a9a9a9"
                      android:textSize="12sp"/>
            <TextView android:id="@+id/time"
                      android:gravity="bottom"
                      android:drawableLeft="@drawable/ic_time"
                      android:drawablePadding="4dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="23dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignTop="@id/userImagePanel"
                      android:layout_alignParentRight="true"
                      android:layout_toRightOf="@id/commentCount"
                      android:ellipsize="end"
                      android:singleLine="true"
                      android:textColor="#a9a9a9"
                      android:textSize="12sp"/>
        </RelativeLayout>
        <y2k.joyreactor.FixedAspectPanel
            android:id="@+id/imagePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <y2k.joyreactor.WebImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </y2k.joyreactor.FixedAspectPanel>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="?android:listChoiceBackgroundIndicator"
                android:tint="@android:color/darker_gray"
                android:src="@drawable/ic_favorite_white_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/videoMark"
                android:background="?android:listChoiceBackgroundIndicator"
                android:tint="@android:color/darker_gray"
                android:src="@drawable/ic_play_circle_filled_white_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>