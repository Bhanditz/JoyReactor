<Page x:Class="JoyReactor.Views.PrivateMessagesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:JoyReactor.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:JoyReactor.Core.ViewModels"
      xmlns:v="using:JoyReactor.Views"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Hub Header="Private messages">
            <HubSection x:Name="ThreadsHubSection"
                        VerticalContentAlignment="Stretch">
                <HubSection.DataContext>
                    <vm:MessageThreadsViewModel />
                </HubSection.DataContext>
                <HubSection.ContentTemplate>
                    <DataTemplate>
                        <Grid Width="300">
                            <ListView ItemsSource="{Binding Threads}"
                                      SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding UserName}" />
                                            <TextBlock Text="{Binding LastMessage}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <ProgressBar IsIndeterminate="True"
                                         VerticalAlignment="Top"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </HubSection.ContentTemplate>
            </HubSection>
            <HubSection x:Name="MessagesHubSection"
                        VerticalContentAlignment="Stretch">
                <HubSection.DataContext>
                    <vm:MessagesViewModel />
                </HubSection.DataContext>
                <HubSection.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ListView Width="300"
                                      Grid.ColumnSpan="2"
                                      SelectionMode="None"
                                      ItemsSource="{Binding Messages}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplateSelector>
                                    <v:PrivateMessageTemplateSelector>
                                        <v:PrivateMessageTemplateSelector.InboxTempalte>
                                            <DataTemplate>
                                                <StackPanel Background="#FF404040"
                                                            Margin="0,0,50,0">
                                                    <TextBlock Text="{Binding Message}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding Created}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </v:PrivateMessageTemplateSelector.InboxTempalte>
                                        <v:PrivateMessageTemplateSelector.OutboxTempate>
                                            <DataTemplate>
                                                <StackPanel Background="#FF404040"
                                                            Margin="50,0,0,0">
                                                    <TextBlock Text="{Binding Message}"
                                                               TextWrapping="Wrap" />
                                                    <TextBlock Text="{Binding Created}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </v:PrivateMessageTemplateSelector.OutboxTempate>
                                    </v:PrivateMessageTemplateSelector>
                                </ListView.ItemTemplateSelector>
                            </ListView>
                            <ProgressBar IsIndeterminate="True"
                                         Grid.RowSpan="2"
                                         VerticalAlignment="Top"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Grid.ColumnSpan="2" />
                            <TextBox PlaceholderText="New message"
                                     Text="{Binding NewMessage, Mode=TwoWay}"
                                     VerticalAlignment="Center"
                                     Grid.Row="1" />
                            <Button Content="OK"
                                    Command="{Binding CreateMessageCommand}"
                                    Grid.Column="1"
                                    Grid.Row="1" />
                        </Grid>
                    </DataTemplate>
                </HubSection.ContentTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>